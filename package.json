{
  "name": "apify-actor-cloud-service",
  "version": "1.1.1",
  "description": "Cloud execution service for Apify Actor scraper (Hostinger VPS)",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "NODE_OPTIONS='--max-old-space-size=8192' node server.js",
    "dev": "NODE_OPTIONS='--max-old-space-size=8192' nodemon server.js",
    "dashboard": "node dashboard-server.js",
    "dashboard:dev": "nodemon dashboard-server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": ["apify", "scraper", "playwright", "local"],
  "author": "SensiBlock",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.11"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/coverage/**",
      "!ecosystem.config.cjs"
    ]
  }
}
